@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Inicio</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Contenido</a></li>
                        <li class="breadcrumb-item active">Gestion lista de tareas</li>
                    </ol>
                </div>
                <h4 class="page-title">MÓDULO LISTA DE TAREAS</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="idNivelg">Nivel</label>
                                <select class="form-control" id="idNivelg"></select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="idGradog">Grado</label>
                                <select class="form-control" id="idGradog"></select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="idCursog">Curso</label>
                                <select class="form-control" id="idCursog"></select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="idClaseg">Clase</label>
                                <select class="form-control" id="idClaseg"></select>
                            </div>
                        </div>
                    </div>
                    <!-- end nav-->
                    <div class="tab-content">
                        <div class="tab-pane show active" id="basic-datatable-preview">
                            <table id="tblArchivo" class="table dt-responsive nowrap w-100">
                                <thead>
                                    <tr>
                                        <th>Nombre tarea</th>
                                        <th>Enlace</th>
                                        <th>Fechas</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>

                            </table>
                        </div>
                        <!-- end preview code-->
                    </div>
                    <!-- end tab-content-->

                </div>
                <!-- end card body-->
            </div>
            <!-- end card -->
        </div>
        <!-- end col-->
    </div>
    <!-- end row -->
    <!-- MODAL -->
    <div id="modalClase" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="dark-header-modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header modal-colored-header bg-dark">
                    <h4 class="modal-title" id="dark-header-modalLabel">Tarea</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <input type="hidden" name="idgrado" value="" id="hddidarchivo" />
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="txtNombreArc">Nombre</label>
                                <input type="text" name="nombre" id="txtNombreArc" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="txttipoarchivo">Tipo de Tarea</label>
                                <select class="form-control" name="itipoarchivo" id="txttipoarchivo">
                                    <option value="0">Seleccionar</option>
                                    <option value="1">Tarea (Calificable)</option>
                                    <option value="2">Teoría</option>
                                    <option value="3">Texto</option>
                                    <option value="4">Otro</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label for="txtdescripcion">Descripción</label>
                                <textarea class="form-control" name="descripcion" id="txtdescripcion" placeholder="Descripción..." rows="5"></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="txtenlace">Enlace de la tarea</label>
                                <input type="text" name="rutaenlace" id="txtenlace" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="txtvideo">Archivo de la tarea</label>
                                <br />
                                <a class="btn btn-info" href="" target="_blank" id="arutaarchivo">Abrir enlace</a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="txtfechaini">Fecha Inicio</label>
                                <input disabled type="text" name="fechaini" id="txtfechaini" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="txtfechafin">Fecha Fin</label>
                                <input disabled type="text" name="fechafin" id="txtfechafin" class="form-control">
                            </div>
                        </div>


                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Cerrar</button>
                    @*<button type="button" class="btn btn-dark" id="btnGuardar">Guardar</button>*@
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- end row-->
    <!--MODAL ELIMINAR-->
    <!--MODAL ELIMINAR-->
</div>

